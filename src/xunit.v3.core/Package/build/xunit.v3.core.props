<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <ProjectCapability Include="TestContainer" />
  </ItemGroup>

  <PropertyGroup>
    <DebugSymbols Condition=" '$(DebugSymbols)' == '' ">true</DebugSymbols>
    <!-- Turn off Microsoft.NET.Test.SDK's auto-generated entrypoint, as it conflicts with ours -->
    <GenerateProgramFile>false</GenerateProgramFile>
    <IsTestProject>true</IsTestProject>
    <OutputType>Exe</OutputType>
    <TestProject>true</TestProject>
  </PropertyGroup>

  <!-- Auto-generated entry points -->
  <ItemGroup Condition=" '$(XunitAutoGeneratedEntryPoint)' != 'false' ">
    <Compile      Include="$(MSBuildThisFileDirectory)..\_content\cs\*.cs" Visible="false" Condition=" '$(Language)' == 'C#' " />
    <CompileAfter Include="$(MSBuildThisFileDirectory)..\_content\fs\*.fs" Visible="false" Condition=" '$(Language)' == 'F#' " />
    <Compile      Include="$(MSBuildThisFileDirectory)..\_content\vb\*.vb" Visible="false" Condition=" '$(Language)' == 'VB' " />
  </ItemGroup>

</Project>
